<div class="inn_search_rt">
  
    <div class="rt_tbl_boxes">
        <div class="rt_tbl_top">
            <div class="tbl_box">
                <div class="top-head-rt">

                </div>
            </div>
            <div class="tbl_box">
                <h6>Coin</h6>
            </div>
            <div class="tbl_box">
                <h6>NGÀY THÊM</h6>
            </div>

        </div>
        <% @games.each do |game| %>     
        <div class="rt_tbl_bottom no-border">
            <div class="tbl_box">
                <div class="media">
                    <div class="media-left hasVideo">
                        <a href="game/<%= game.id %>" class="pic_box">
                            <img typeof="foaf:Image" src="<%= game.imggame %>" width="180" height="117" alt="">
                        </a>
                    </div>
                    <div class="media-body">
                        <h4 class="media-heading"><a
                                href="game/<%= game.id %>"><%= game.namegame%></a>
                        </h4>
                        <p><%= game.detailgame%></p>
                        <h5>Category:</h5>
                        <ul class="category_list">
                            <li><a href=""><%= game.tendanhmuc %></a>
                            </li>
                        </ul>
                    </div>
                </div>

                <ul class="bottom_sec">
                    <li>Coin: <span> <%= game.coin%></span></li>
                    <li>Ngày Thêm: <span><%= game.time%></span></li>
                </ul>
            </div>
            <div class="tbl_box">
                <p>
                    <strong>
                        <span>
                           <%= game.coin%></span>
                    </strong>
                </p>
            </div>
            <div class="tbl_box">
                <p>
                    <strong>
                        <span>
                            <%= game.time%> </span>
                    </strong>
                </p>
            </div>
        </div>
        <% end %>     
    </div>
    <div class="bottom_pagination" style="width: 100%;">
        <div class="pagination_sec" style="text-align: center;">
            <%= will_paginate @games %>
        </div>
    </div>
</div>